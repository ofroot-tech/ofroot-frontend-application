# Local development environment variables
# Copy this file to `.env.local` and adjust values as needed.

# -----------------------------
# Required (app boot/build)
# -----------------------------
# Laravel API base URL (must include `/api`).
# Local stack (recommended): http://127.0.0.1:8000/api
# Production fallback:       https://ofroot-leads.onrender.com/api
NEXT_PUBLIC_API_BASE_URL=http://127.0.0.1:8000/api

# -----------------------------
# Optional (admin/blog behavior)
# -----------------------------
# Comma-separated list of super-admin emails (server-side only).
ADMIN_EMAILS=dimitri.mcdaniel@gmail.com

# If set, super-admin blog publishes can attribute to this tenant.
OFROOT_TENANT_ID=1

# Used by seed/test playbooks (not required to run the UI).
DEV_SEED_PASSWORD=ofroot-dev-pass

# -----------------------------
# Optional (Sentry)
# -----------------------------
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=development
# SENTRY_TRACES=0.05

# -----------------------------
# Optional (Supabase auth)
# -----------------------------
# Needed for /auth/login and /api/auth/* routes.
# NEXT_PUBLIC_SUPABASE_URL=
# NEXT_PUBLIC_SUPABASE_ANON_KEY=
# SUPABASE_SERVICE_ROLE_KEY=

# -----------------------------
# Optional (Stripe)
# -----------------------------
# Only needed for subscribe + webhook routes.
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=
# STRIPE_PRICE_PRO_MONTHLY=
# STRIPE_PRICE_PRO_YEARLY=
# STRIPE_PRICE_BUSINESS_MONTHLY=
# STRIPE_PRICE_BUSINESS_YEARLY=
